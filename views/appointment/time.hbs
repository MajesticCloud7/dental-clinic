<style>
    div form div.form-group {
        padding: 5px;
    }
</style>

<div id="box" class="col-md-6 offset-md-3">
    <h3>Schedule Appointment</h3>
    <form action="/appointment/scheduleTime" method="post" autocomplete="off">
        <input type="hidden" name="_id">
        <input type="hidden" name="doctorId" value="{{doctorId}}">
        <input type="hidden" name="patientId" value="{{patientId}}">
        <input type="hidden" name="date" value="{{date}}">
        <div class="form-group">
            <label>Time</label>
            <select class="form-control" name="time" required="true">
                {{#each times}}
                <option value="{{this}}">{{this}}</option>
                {{/each}}
            </select>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-info">Submit</button>
            <a class="btn btn-secondary" href="/appointment/main/{{id}}">Cancel</a>
        </div>
    </form>
</div>